<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd">
  <!--
    Para usar Gitlab local como registro de artefactos, se requieren credenciales.
    En este ejemplo, se emplea la variable de nivel grupo CICD_TOKEN, cuyo valor debe
    ser el tokenId privado de un usuario con nivel 'manager' en el grupo o proyecto actual. 
  -->
  <servers>
    <server>
      <id>gitlab-maven</id>
      <configuration>
        <httpHeaders>
          <property>
            <name>Private-Token</name>
            <value>${CICD_TOKEN}</value>
          </property>
        </httpHeaders>
      </configuration>
    </server>
  </servers>
</settings>
